{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "src",
    "paths": {
      "@environment/*": [
        "environments/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@features/*": [
        "app/features/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@app/*": [
        "app/*"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
